{
    "manifest_version": 3,
    "name": "Auto Pan by Window Position",
    "version": "1.14.1",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "matches": [
                "*://*/*"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "common.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "system.display"
    ]
}